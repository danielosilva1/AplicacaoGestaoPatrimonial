generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now())

  userData ProfileData @relation(fields: [userRegistration], references: [registration]) // Campo do relacionamento: apenas define conex達o, n達o existe no banco
  userRegistration Int // Chave estrangeira

  @@map("users")
}

model ProfileData {
  registration Int @unique
  name String
  email String @unique

  ownerOfData User[] // Campo do relacionamento: apenas define conex達o, n達o existe no banco

  @@map("profile_data")
}